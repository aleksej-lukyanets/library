        </xs:sequence>
    </xs:complexType>
    <xs:complexType name="EmployeeType">
        <xs:sequence>
            <xs:element type="xs:byte" name="Number"/>
            <xs:element type="xs:string" name="FirstName"/>
            <xs:element type="xs:string" name="LastName"/>
        </xs:sequence>
    </xs:complexType>
    <xs:complexType name="HolidayRequestType">
        <xs:sequence>
            <xs:element xmlns:sch="http://mycompany.com/hr/schemas" type="sch:HolidayType" name="Holiday"/>
